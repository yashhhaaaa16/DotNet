@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products List!";
}

<h1>@ViewBag.PageTitle</h1>
<hr />
@if (Model.Count() > 0)
{
    <div class="container text-center">
        <div class="row">
            @foreach (Product product in Model)
            {
                <div class="card shadow-lg m-2 bg-body-tertiary rounded" style="width: 20rem;">
                    <img src=@Url.Content(product.Picture) class="card-img-top" alt=@product.ProductName>
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">@product.Description</p>
                        <hr>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@product.ProductId">Show Details</a> | <a class="btn btn-success" asp-controller="Carts" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add To Cart</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h1>No Products Available under this Category!</h1>
}
